<main id="home" class="text-blueGray-700 antialiased">
  <div class="relative pt-16 pb-32 flex content-center items-center justify-center" style="min-height:75vh">
    <div class="absolute top-0 w-full h-full bg-center bg-cover" style="background-image:url(<%= image_path('home/banner.jpg') %>)">
      <span id="blackOverlay" class="w-full h-full absolute opacity-75 bg-black"></span>
    </div>
    <div class="container relative mx-auto mt-10">
      <div class="items-center flex flex-wrap">
        <div class="w-full lg:w-8/12 px-4 ml-auto mr-auto text-center">
          <div class="pr-12">
            <h1 class="text-white font-semibold text-5xl"><%= t 'web.home.banner.title' %></h1>
            <p class="mt-4 text-lg text-blueGray-200"><%= t 'web.home.banner.subtitle' %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="top-auto bottom-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden" style="height:70px">
      <svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" version="1.1" viewBox="0 0 2560 100" x="0" y="0">
        <polygon class="text-blueGray-200 fill-current" points="2560 0 2560 100 0 100">
        </polygon>
      </svg>
    </div>
  </div>
  <section class="pb-20 bg-blueGray-200 -mt-24">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap">
        <div class="lg:pt-12 pt-6 w-full md:w-4/12 px-4 text-center">
          <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
            <div class="px-4 py-5 flex-auto">
              <div class="text-white p-3 text-center inline-flex items-center justify-center w-12 h-12 mb-5 shadow-lg rounded-full bg-red-400">
                <i class="fas fa-award"></i>
              </div>
              <h6 class="text-xl font-semibold"><%= t 'web.home.advantages.first.title' %></h6>
              <p class="mt-2 mb-4 text-blueGray-500"><%= t 'web.home.advantages.first.subtitle' %></p>
            </div>
          </div>
        </div>
        <div class="w-full md:w-4/12 px-4 text-center">
          <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
            <div class="px-4 py-5 flex-auto">
              <div class="text-white p-3 text-center inline-flex items-center justify-center w-12 h-12 mb-5 shadow-lg rounded-full bg-lightBlue-400">
                <i class="fas fa-retweet"></i>
              </div>
              <h6 class="text-xl font-semibold"><%= t 'web.home.advantages.second.title' %></h6>
              <p class="mt-2 mb-4 text-blueGray-500"><%= t 'web.home.advantages.second.subtitle' %></p>
            </div>
          </div>
        </div>
        <div class="pt-6 w-full md:w-4/12 px-4 text-center">
          <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-8 shadow-lg rounded-lg">
            <div class="px-4 py-5 flex-auto">
              <div class="text-white p-3 text-center inline-flex items-center justify-center w-12 h-12 mb-5 shadow-lg rounded-full bg-emerald-400">
                <i class="fas fa-fingerprint"></i>
              </div>
              <h6 class="text-xl font-semibold"><%= t 'web.home.advantages.third.title' %></h6>
              <p class="mt-2 mb-4 text-blueGray-500"><%= t 'web.home.advantages.third.subtitle' %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-wrap items-center mt-32">
        <div class="w-full md:w-5/12 px-4 mr-auto ml-auto">
          <div class="text-blueGray-500 p-3 text-center inline-flex items-center justify-center w-16 h-16 mb-6 shadow-lg rounded-full bg-blueGray-50">
            <i class="fas fa-user-friends text-xl"></i>
          </div>
          <h3 class="text-3xl mb-2 font-semibold leading-normal"><%= t 'web.home.relationship.title' %></h3>
          <p class="text-lg font-light leading-relaxed mt-4 mb-4 text-blueGray-600"><%= t 'web.home.relationship.subtitle.first' %></p>
          <p class="text-lg font-light leading-relaxed mt-0 mb-4 text-blueGray-600"><%= t 'web.home.relationship.subtitle.second' %></p>
          <a href="#" class="font-bold text-blueGray-700 mt-8" target="_blank">
            <p>
              <%= t 'web.home.relationship.cta' %>
            </p>
          </a>
        </div>
        <div class="w-full md:w-4/12 px-4 mr-auto ml-auto">
          <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-lg rounded-lg bg-pink-600">
            <img alt="<%= t 'web.home.real_time.title' %>" src="<%= image_path('home/real_time.jpg') %>" class="w-full align-middle rounded-t-lg">
            <blockquote class="relative p-8 mb-4">
              <svg preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 583 95" class="absolute left-0 w-full block" style="height:95px;top:-94px">
                <polygon points="-30,95 583,95 583,65" class="text-pink-600 fill-current"></polygon>
              </svg>
              <h4 class="text-xl font-bold text-white"><%= t 'web.home.real_time.title' %></h4>
              <p class="text-md font-light mt-2 text-white"><%= t 'web.home.real_time.subtitle' %></p>
            </blockquote>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="relative py-20">
    <div class="bottom-auto top-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden -mt-20" style="height:80px"><svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" version="1.1" viewBox="0 0 2560 100" x="0" y="0">
        <polygon class="text-white fill-current" points="2560 0 2560 100 0 100">
        </polygon>
      </svg>
    </div>
    <div class="container mx-auto px-4">
      <div class="items-center flex flex-wrap">
        <div class="w-full md:w-4/12 ml-auto mr-auto px-4">
          <img alt="<%= t 'web.home.automated.title' %>" class="max-w-full rounded-lg shadow-lg" src="<%= image_path('home/complete.jpg') %>">
        </div>
        <div class="w-full md:w-5/12 ml-auto mr-auto px-4">
          <div class="md:pr-12">
            <div class="text-pink-600 p-3 text-center inline-flex items-center justify-center w-16 h-16 mb-6 shadow-lg rounded-full bg-pink-300">
              <i class="fas fa-rocket text-xl"></i>
            </div>
            <h3 class="text-3xl font-semibold"><%= t 'web.home.automated.title' %></h3>
            <p class="mt-4 text-lg leading-relaxed text-blueGray-500"><%= t 'web.home.automated.subtitle' %></p>
            <ul class="list-none mt-6">
              <li class="py-2">
                <div class="flex items-center">
                  <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-pink-600 bg-pink-200 mr-3">
                      <i class="fas fa-fingerprint"></i>
                    </span>
                  </div>
                  <div>
                    <h4 class="text-blueGray-500"><%= t 'web.home.automated.functionalities.first' %></h4>
                  </div>
                </div>
              </li>
              <li class="py-2">
                <div class="flex items-center">
                  <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-pink-600 bg-pink-200 mr-3">
                      <i class="fab fa-html5">
                      </i>
                    </span>
                  </div>
                  <div>
                    <h4 class="text-blueGray-500"><%= t 'web.home.automated.functionalities.second' %></h4>
                  </div>
                </div>
              </li>
              <li class="py-2">
                <div class="flex items-center">
                  <div>
                    <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-pink-600 bg-pink-200 mr-3">
                      <i class="fas fa-globe-americas"></i>
                    </span>
                  </div>
                  <div>
                    <h4 class="text-blueGray-500"><%= t 'web.home.automated.functionalities.third' %></h4>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="pt-20 pb-48">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap justify-center text-center mb-24">
        <div class="w-full lg:w-6/12 px-4">
          <h2 class="text-4xl font-semibold"><%= t 'web.home.our_plans.title' %></h2>
          <p class="text-lg leading-relaxed m-4 text-blueGray-500"><%= t 'web.home.our_plans.subtitle' %></p>
        </div>
      </div>
      <div class="flex flex-wrap">
        <div class="w-full md:w-6/12 lg:w-3/12 lg:mb-0 mb-12 px-4">
          <div class="px-6">
            <div class="bg-blueGray-200 flex items-center justify-center shadow-lg rounded-full w-28	h-28 m-auto" >
              <i class="fas fa-seedling text-6xl text-lightBlue-400"></i>
            </div>
            <div class="pt-6 text-center">
              <h5 class="text-xl font-bold">
                <%= t 'web.home.our_plans.plans.trial.title' %>
              </h5>
              <p class="mt-1 text-sm text-blueGray-400 uppercase font-semibold">
                <%= t 'web.home.our_plans.plans.trial.subtitle' %>
              </p>
              <div class="mt-6">
                <a class="btn-secondary btn-small" href="#trial" role="button">
                  <%= t 'web.home.our_plans.plans.go' %>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full md:w-6/12 lg:w-3/12 lg:mb-0 mb-12 px-4">
          <div class="px-6">
            <div class="bg-blueGray-200 flex items-center justify-center shadow-lg rounded-full w-28	h-28 m-auto" >
              <i class="far fa-paper-plane text-6xl text-emerald-400"></i>
            </div>
            <div class="pt-6 text-center">
              <h5 class="text-xl font-bold">
                <%= t 'web.home.our_plans.plans.monthly.title' %>
              </h5>
              <p class="mt-1 text-sm text-blueGray-400 uppercase font-semibold">
                <%= t 'web.home.our_plans.plans.monthly.subtitle' %>
              </p>
              <div class="mt-6">
                <a class="btn-success btn-small" href="#monthly" role="button">
                  <%= t 'web.home.our_plans.plans.go' %>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full md:w-6/12 lg:w-3/12 lg:mb-0 mb-12 px-4">
          <div class="px-6">
            <div class="bg-blueGray-200 flex items-center justify-center shadow-lg rounded-full w-28	h-28 m-auto" >
              <i class="fas fa-rainbow text-6xl text-red-400"></i>
            </div>
            <div class="pt-6 text-center">
              <h5 class="text-xl font-bold">
                <%= t 'web.home.our_plans.plans.semester.title' %>
              </h5>
              <p class="mt-1 text-sm text-blueGray-400 uppercase font-semibold">
                <%= t 'web.home.our_plans.plans.semester.subtitle' %>
              </p>
              <div class="mt-6">
                <a class="btn-alert btn-small" href="#semester" role="button">
                  <%= t 'web.home.our_plans.plans.go' %>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full md:w-6/12 lg:w-3/12 lg:mb-0 mb-12 px-4">
          <div class="px-6">
            <div class="bg-blueGray-200 flex items-center justify-center shadow-lg rounded-full w-28	h-28 m-auto" >
              <i class="far fa-gem text-6xl text-pink-500"></i>
            </div>
            <div class="pt-6 text-center">
              <h5 class="text-xl font-bold">
                <%= t 'web.home.our_plans.plans.yearly.title' %>
              </h5>
              <p class="mt-1 text-sm text-blueGray-400 uppercase font-semibold">
                <%= t 'web.home.our_plans.plans.yearly.subtitle' %>
              </p>
              <div class="mt-6">
                <a class="btn-info btn-small" href="#yearly" role="button">
                  <%= t 'web.home.our_plans.plans.go' %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="pb-20 relative block bg-blueGray-800">
    <div class="bottom-auto top-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden -mt-20" style="height:80px">
      <svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" version="1.1" viewBox="0 0 2560 100" x="0" y="0">
        <polygon class="text-blueGray-800 fill-current" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
    <div class="container mx-auto px-4 lg:pt-24 lg:pb-64">
      <div class="flex flex-wrap text-center justify-center">
        <div class="w-full lg:w-6/12 px-4">
          <h2 class="text-4xl font-semibold text-white">
            <%= t 'web.home.innovation.title' %>
          </h2>
          <p class="text-lg leading-relaxed mt-4 mb-4 text-blueGray-400">
            <%= t 'web.home.innovation.subtitle' %>
          </p>
        </div>
      </div>
      <div class="flex flex-wrap mt-12 justify-center">
        <div class="w-full lg:w-3/12 px-4 text-center">
          <div class="text-blueGray-800 p-3 w-12 h-12 shadow-lg rounded-full bg-white inline-flex items-center justify-center">
            <i class="fas fa-medal text-xl"></i>
          </div>
          <h6 class="text-xl mt-5 font-semibold text-white">
            <%= t 'web.home.innovation.seals.first.title' %>
          </h6>
          <p class="mt-2 mb-4 text-blueGray-400">
            <%= t 'web.home.innovation.seals.first.subtitle' %>
          </p>
        </div>
        <div class="w-full lg:w-3/12 px-4 text-center">
          <div class="text-blueGray-800 p-3 w-12 h-12 shadow-lg rounded-full bg-white inline-flex items-center justify-center">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h5 class="text-xl mt-5 font-semibold text-white">
            <%= t 'web.home.innovation.seals.second.title' %>
          </h5>
          <p class="mt-2 mb-4 text-blueGray-400">
            <%= t 'web.home.innovation.seals.second.subtitle' %>
          </p>
        </div>
        <div class="w-full lg:w-3/12 px-4 text-center">
          <div class="text-blueGray-800 p-3 w-12 h-12 shadow-lg rounded-full bg-white inline-flex items-center justify-center">
            <i class="fas fa-lightbulb text-xl"></i>
          </div>
          <h5 class="text-xl mt-5 font-semibold text-white">
            <%= t 'web.home.innovation.seals.third.title' %>
          </h5>
          <p class="mt-2 mb-4 text-blueGray-400">
            <%= t 'web.home.innovation.seals.third.subtitle' %>
          </p>
        </div>
      </div>
    </div>
  </section>
  <section class="relative block py-24 lg:pt-0 bg-blueGray-800">
    <div class="container mx-auto px-4">
      <%= render 'shared/contact_form'  %>
    </div>
  </section>
</main>
